        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program with ts-node",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/index.ts",
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "console": "integratedTerminal",
            "outFiles": [
                "${workspaceFolder}/src/**/*.ts"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program with ts-node-dev",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeExecutable": "ts-node-dev",
            "args": [
                "${workspaceFolder}/src/index.ts"
            ],
            "console": "integratedTerminal",
            "outFiles": [
                "${workspaceFolder}/src/**/*.ts"
            ]
        }
    ]
}